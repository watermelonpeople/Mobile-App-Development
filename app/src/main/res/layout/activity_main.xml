    <RelativeLayout
        android:layout_width="213dp"
        android:layout_height="213dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/ic_round_stepcounter_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView

            android:id="@+id/showTodaySteps"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:gravity="center_vertical"
            android:text="@string/show_today_step"
            android:textColor="@color/warmYellow"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/showSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/showTodaySteps"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:shadowColor="@color/warmYellow"
            android:shadowRadius="1.5"
            android:text="@string/today_step"
            android:textColor="@color/warmYellow"
            android:textSize="25sp" />

    </RelativeLayout>

